<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEEFEA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="148dp"
        android:text="ข้อใดเป็นข้อมูล Output"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but1"
        android:layout_width="383dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="87dp"
        android:text="เกรด"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/but2"
        android:layout_width="383dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="คะแนนสอบกลางภาค"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but1" />

    <Button
        android:id="@+id/but3"
        android:layout_width="383dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="จำนวนของสินค้าที่ต้องซื้อ"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but2" />

    <Button
        android:id="@+id/but4"
        android:layout_width="383dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="ชื่อสินค้า"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but3" />
</androidx.constraintlayout.widget.ConstraintLayout>